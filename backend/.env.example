# ---- App ----
PORT=3000
NODE_ENV=development
APP_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:5173

# ---- Auth (JWT) ----
JWT_SECRET=change_me
JWT_EXPIRES=7d

# ---- Database (SQL Server / MSSQL) ----
DB_SERVER=127.0.0.1
DB_INSTANCE=
DB_PORT=1433
DB_USER=sa
DB_PASS=your_password
DB_NAME=telehealth_db
DB_ENCRYPT=false
DB_TRUST_SERVER_CERT=true
# Hoặc: DB_URL=mssql://sa:your_password@127.0.0.1:1433;database=telehealth_db

# ---- Mail (Gmail SMTP với App Password) ----
MAIL_HOST=smtp.gmail.com
MAIL_PORT=465
MAIL_SECURE=true
MAIL_USER=youremail@gmail.com
MAIL_PASS=app_password_16chars
MAIL_FROM=Telehealth <youremail@gmail.com>

# ---- Video SDK (optional) ----
VIDEO_APP_ID=
VIDEO_APP_SECRET=

# ---- Storage (optional) ----
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_BUCKET=telehealth
STORAGE_ACCESS_KEY=
STORAGE_SECRET_KEY=
